<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
    <name>MOD_VM_CART</name>
	<creationDate>March 31 2015</creationDate>
    <author>Vladimir</author>
    <authorUrl>http://virtuemart.su</authorUrl>
    <version>1.6</version>
	<description>MOD_VM_CART_DESC</description>
    <files>
        <filename module="mod_vm_cart">mod_vm_cart.php</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <folder>language</folder>
		<folder>assets</folder>
    </files>
    <params>
        <param name="moduleclass_sfx" type="text" default=""
			label="MOD_VM_CART_SUFFIX"
			description="MOD_VM_CART_SUFFIX_DESC" />
        <br/>
        <param name="show_product_list" type="list" default="1"
			label="MOD_VM_CART_SHOW_LIST"
			description="MOD_VM_CART_SHOW_LIST_DESC">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
    </params>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="moduleclass_sfx" type="text" default=""
			label="MOD_VM_CART_SUFFIX"
			description="MOD_VM_CART_SUFFIX_DESC" />
				<field name="color" type="text" default="#2196f3" label="MOD_VM_CART_COLOR" description="MOD_VM_CART_COLOR_DESC" />
				<field name="imgcart" type="list" default="0" label="MOD_VM_CART_IMG_CART" description="MOD_VM_CART_IMG_CART_DESC">
					<option value="0">1</option>
					<option value="1">2</option>
					<option value="2">3</option>
					<option value="3">4</option>
					<option value="4">5</option>
					<option value="5">6</option>
					<option value="6">7</option>
					<option value="7">8</option>
					<option value="8">9</option>
					<option value="9">10</option>
				</field>
				<field name="animation" type="list" default="0" label="MOD_VM_CART_ANIMATION" description="MOD_VM_CART_ANIMATION_DESC">
					<option value="0">Нет</option>
					<option value="1">Buzz Out</option>
					<option value="2">Wobble Vertical</option>
				</field>
				<field name="position" type="list" default="0" label="MOD_VM_CART_POSITION" description="MOD_VM_CART_POSITION_DESC">
					<option value="0">MOD_VM_CART_POSITION_RIGHT</option>
					<option value="1">MOD_VM_CART_POSITION_LEFT</option>
				</field>
                <field name="show_product_list" type="list" default="1"
			label="MOD_VM_CART_SHOW_PRODUCT"
			description="MOD_VM_CART_SHOW_PRODUCT_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="show_product_img" type="list" default="1"
			label="MOD_VM_CART_SHOW_PRODUCT_IMG"
			description="MOD_VM_CART_SHOW_PRODUCT_IMG_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
