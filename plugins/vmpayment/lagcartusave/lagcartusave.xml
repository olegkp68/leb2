<?xml version="1.0" encoding="utf-8"?><extension version="2.5" type="plugin" group="vmpayment" method="upgrade">	<name>lagcartusave</name>	<author>lag</author>	<creationDate>6 February 2021</creationDate>	<copyright>Copyright (C) 2013 LAG. All rights reserved.</copyright>	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>	<authorEmail>admin@alekseygen.ru</authorEmail>	<authorUrl>alekseygen.ru</authorUrl>	<version>1.0</version>	<description>Сохранение корзины для пользователя.</description>	<files>		<filename plugin="lagcartusave">lagcartusave.php</filename>		<filename>lagcartusave.xml</filename>			</files>		<scriptfile>install.lagcartusave.php</scriptfile>		<config>		<fields name="params">			<fieldset name="basic">				<field				name="lagcartusave_plugin_lifecookcart"				type="text"				label="Время хранения корзины в днях:"				default="10"				description="Укажите срок хранения в БД и COOKIE браузера пользователей данных о корзине в днях, по умолчанию 10 дней"				class="my-class"/>				<field 				name="lagcartusave_plugin_debugging"				type="radio"				label="Включить информацию отладки"				description="Выводит шаги выполнения работы плагина"				class="btn-group btn-group-yesno"				default="0"				>					<option value="1">JYES</option>					<option value="0">JNO</option>				</field>			</fieldset>					</fields>	</config></extension>