    <description>Facebook Pixel OPC Tracking. </description>
    <files>
        <filename>facebook.php</filename>
    </files>

<params>
    
    
			<param
        type="textarea"
        name="pixel_code"
        id="pixel_code"
        label="Copy paste your Pixel code from Facebook.com"
        description="Copy paste your Pixel code from Facebook.com, this will be displayed on every page"
        size="2550"
		default=""
        maxLength="2550" 
		cols="100"
		rows="10"
		/>
		
		<param
        type="list"
        name="idformat"
        id="idformat"
        label="Transaction ID format" 
        description="Select either order_id, order_number or a combination"
		default="0"
        >
		 <option value="0">{order_id}</option>
		 <option value="1">{order_id}_{order_number}</option>
		 <option value="2">{order_number}</option>
		</param>
       
    
</params>	
</extension>