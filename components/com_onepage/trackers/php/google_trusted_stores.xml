    <files>
        <filename>google_trusted_stores.php</filename>
    </files>

<params>
    
    
			
			
		<param
        type="list"
        name="idformat"
        id="idformat"
        label="Transaction ID format" 
        description="Select either order_id, order_number or a combination"
		default="0"
        >
		 <option value="0">{order_id}</option>
		 <option value="1">{order_id}_{order_number}</option>
		 <option value="2">{order_number}</option>
		</param>
		
		
				
		
		<param
        type="text"
        name="domain"
        id="domain"
        label="Registered domain (www.example.com)"
        size="80"
		default="www.ecample.com"
        maxLength="255" />
		
		<param
        type="text"
        name="storeid"
        id="storeid"
        label="Store ID"
        size="80"
		default="0000000"
        maxLength="255" />
		
		
		
		
		
					<param
        type="text"
        name="sku_prefix"
        id="sku_prefix"
        label="SKU Prefix per your language"
        description="Enter your SKU prefix"
        size="80"
		default=""
		multilang="multilang"
        maxLength="255" />

		
       			<param
        type="text"
        name="sku_suffix"
        id="sku_suffix"
        label="SKU Suffix per your language"
        description="Enter your SKU suffix"
        size="80"
		default=""
		multilang="multilang"
        maxLength="255" />
    
</params>	
</extension>