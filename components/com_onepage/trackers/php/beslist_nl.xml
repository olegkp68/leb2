<?xml version="1.0" encoding="UTF-8" ?>
<extension version="1.5" type="package" group="opctracking" method="upgrade" >	
    <name>OPC Tracking - beslist.nl</name>
    <creationDate>Oct 2013</creationDate>
    <author>RuposTel.com</author>
	<copyright>(C) 2013 RuposTel.com</copyright>
    <authorUrl>http://www.rupostel.com</authorUrl>
    <version>1.0.0</version>

	<license_key>0f11262a2a4e779e0d140ab9b0244fa4_13155</license_key>
    <description>Beslist OPC Tracking</description>
    <files>
        <filename>beslist_nl.php</filename>
    </files>

<params>
    
    
			<param
        type="text"
        name="hostname"
        id="hostname"
        label="Your hostname is used as identification"
        description="Enter your hostname without http"
        size="80"
		default="test.com"
        maxLength="255" />
		
		
		
		<param
        type="list"
        name="method"
        id="method"
        label="Select tracking code type" 
        description=""
		default="0"
        >
		 <option value="0">Javascript</option>
		 <option value="1">Conversion Pixel</option>
		 
		</param>
		
		<param
        type="list"
        name="testing"
        id="testing"
        label="Enable test mode" 
        description=""
		default="0"
        >
		 <option value="0">No</option>
		 <option value="1">Yes</option>
		 
		</param>
		
		
		<param
        type="text"
        name="shopid"
        id="shopid"
        label="Your shopid is used as identification for javascript code"
        description="Enter your shopid"
        size="80"
		default="0"
        maxLength="255" />
		
		
		
		
		
       
    
</params>	
</extension>