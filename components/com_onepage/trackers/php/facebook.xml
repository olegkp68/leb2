    <description>Facebook OPC Tracking. </description>
    <files>
        <filename>facebook.php</filename>
    </files>

<params>
    
    
			<param
        type="text"
        name="addId"
        id="addId"
        label="Your Pixel ID"
        description="Enter your Pixel tracking ID"
        size="80"
		default="00000"
        maxLength="255" />
		
		<param
        type="list"
        name="idformat"
        id="idformat"
        label="Transaction ID format" 
        description="Select either order_id, order_number or a combination"
		default="0"
        >
		 <option value="0">{order_id}</option>
		 <option value="1">{order_id}_{order_number}</option>
		 <option value="2">{order_number}</option>
		</param>
       
    
</params>	
</extension>