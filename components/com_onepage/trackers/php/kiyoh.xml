<?xml version="1.0" encoding="UTF-8" ?>
<extension version="1.5" type="package" group="opctracking" method="upgrade" >	
    <name>OPC Tracking - Kiyoh Klantbeoordelingen</name>
    <creationDate>March 2015</creationDate>
    <author>Frissekom</author>
	<copyright>(C) 2015 Frissekom</copyright>
    <authorUrl>http://www.frisskeom.nl</authorUrl>
    <version>1.0.0</version>

	<license_key>0f11262a2a4e779e0d140ab9b0244fa4_13155</license_key>
    <description>Kiyoh Klantenbeoordelingen</description>
    <files>
        <filename>kiyoh.php</filename>
    </files>

<params>
    <param
        type="text"
        name="kiyoh_mailaddress"
        id="kiyoh_mailaddress"
        label="Your Kiyoh Registred Mailaddress"
        description="This is the e- mail address that the company sent invitations Kiyoh (business email address in your account)"
        size="80"
		default="user@domain.com"
        maxLength="255" />	
    <param
        type="text"
        name="kiyoh_connector_id"
        id="kiyoh_connector_id"
        label="Your Connector ID"
        description="You will find the number under your account at the secured part of Kiyoh.nl"
        size="80"
		default="0000"
        maxLength="255" />			
	<param
        type="text"
        name="kiyoh_action"
        id="kiyoh_action"
        label="What to do (default is sendInvitation)?"
        description="What do you want to achieve with Kiyoh.nl. Default is sending an invitation"
        size="80"
		default="sendInvitation"
        maxLength="255" />		
	<param
        type="list"
        name="kiyoh_delay"
        id="kiyoh_delay"
        label="The delay before the invition will be sent (default is 4 days)" 
        description="Post the invitation to Kiyoh."
		default="4"
        >
		 <option value="0">Immediatly after order</option>
		 <option value="1">After 1 day</option>
		 <option value="2">After 2 days</option>
		 <option value="3">After 3 days</option>
		 <option value="4">After 4 days</option>
		 <option value="5">After 5 days</option>
		 <option value="6">After 6 days</option>
		 <option value="7">After 7 days</option>
		 <option value="8">After 8 days</option>
		 <option value="9">After 9 days</option>
		 <option value="10">After 10 days</option>
		 <option value="11">After 11 days</option>
		 <option value="12">After 12 days</option>
		 <option value="13">After 13 days</option>
		 <option value="14">After 14 days</option>
		</param>
		
		
   	<param
        type="list"
        name="kiyoh_domain"
        id="kiyoh_domain"
        label="Kiyoh domain to use" 
        description=""
		default="4"
        >
		 <option value="nl">kiyoh.nl</option>
		 <option value="com">kiyoh.com</option>
		 
		</param>
		
       
    
</params>	
</extension>